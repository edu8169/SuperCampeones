<div style="color:white">.</div>
<% if(recipe != null ) { %>


  <div class="row">

    <div class="col-12 col-md-4">
      <img src="<%- recipe.imagen %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- recipe.nombre %>" loading="lazy">
      <a href="/edit-recipe" class="edit-button">Edit</a>
      <a href="/recipes" onclick="deleteRecipe()" class="delete-button">Delete</a>
    </div>

    <div class="col-12 col-md-8">
      <div class="row">
        <div class="col-12"><h1><%- recipe.nombre %></h1></div>
        <div class="col-12 mb-4"><em class="bi bi-tag"></em> <%- recipe.tipo %></div>
                
      </div>

      <div class="row pt-4">
        <div class="col-12">
          <h4>Ingredientes</h4>
          <ul class="list-group list-group-flush">
            <% recipe.ingredients.forEach(function(ingredients, index){ %>
              <li class="list-group-item"><%= ingredients %></li>
            <% }) %>
          </ul> 
        </div>
      </div>
      <div class="row pt-4">
        <div class="col-12">
          <h4>Pasos</h4>
          <ul class="list-group list-group-flush">
            <% recipe.steps.forEach(function(steps, index){ %>
              <li class="list-group-item"><%= steps %></li>
            <% }) %>
          </ul> 
        </div>
      </div>
    </div>
  </div>
<% } %>