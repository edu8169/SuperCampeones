<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Crear Receta</h1>
  
</div>

<div class="row justify-content-center">

  <% if(infoSubmitObj != '') { %>
    <div class="col-8 alert alert-success" role="alert">
      <%= infoSubmitObj %>
    </div>
  <% } %>

  <% if(infoErrorsObj != '') { %>
    <div class="col-8 alert alert-danger" role="alert">
      <%= infoErrorsObj[0].message %>
    </div>
  <% } %>

  <div class="col-8">

    <form action="/submit-recipe" enctype="multipart/form-data" method="POST">
    
      <div class="row g-3">

        <div>
          <label for="nombre" class="form-label">Nombre</label>
          <input type="text" name="nombre" id="nombre" class="form-control">
        </div>

        <div class="col-12">
          <label for="duracion" class="form-label">Duraci√≥n (minutos)</label>
          <input class="form-control" id = "duracion" type="number" name="duracion" step="15" required>
        </div>
        
        <div class="col-12">
          <label for="tipo">Tipo</label>
          <select class="form-select form-control" name="tipo" aria-label="Tipo">
            <option value="" disabled selected>Selecciona el tipo</option>
            <option value="Carne">Carne</option>
            <option value="Mariscos">Mariscos</option>
            <option value="Saludable">Saludable</option>
            <option value="Vegetariano">Vegetariano</option>
          </select>
        </div>

        <div>
          <label for="imagen" class="form-label">Imagen (Link) </label>
          <input type="text" name="imagen" id="imagen" class="form-control">
        </div>

        <div class="col-12">
          <label for="ingredients" class="form-label">Ingredientes</label><br>
          <div class="ingredientList">
            <div class="ingredeintDiv mb-1">
              <input type="text" name="ingredients" class="form-control">
            </div>
          </div>
        </div>

        <div class="col-12">
          <button type="button" class="btn btn-outline-primary" id="addIngredientsBtn">+</button>
        </div>

        <div class="col-12">
          <label for="steps" class="form-label">Pasos</label><br>
          <div class="stepList">
            <div class="stepDiv mb-1">
              <input type="text" name="steps" class="form-control">
            </div>
          </div>
        </div>

        <div class="col-12">
          <button type="button" class="btn btn-outline-primary" id="addStepsBtn">+</button>
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary">Guardar Receta</button>
        </div>

      </div>
    
    </form>

  </div>
</div>